<Window
    x:Class="ComAssistant.Views.MainView"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:comAssistant="clr-namespace:ComAssistant"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="using:ComAssistant.ViewModels"
    Title="ComAssistant"
    d:DesignHeight="450"
    d:DesignWidth="800"
    x:CompileBindings="True"
    x:DataType="vm:MainViewModel"
    Background="Transparent"
    ExtendClientAreaToDecorationsHint="True"
    Icon="/Assets/logo.ico"
    TransparencyLevelHint="AcrylicBlur"
    mc:Ignorable="d">

    <Design.DataContext>
        <!--
            This only sets the DataContext for the previewer in an IDE,
            to set the actual DataContext for runtime, set the DataContext property in code (look at App.axaml.cs)
        -->
        <vm:MainViewModel />
    </Design.DataContext>

    <Panel>
        <ExperimentalAcrylicBorder IsHitTestVisible="False">
            <ExperimentalAcrylicBorder.Material>
                <ExperimentalAcrylicMaterial
                    BackgroundSource="Digger"
                    MaterialOpacity="0.65"
                    TintColor="White"
                    TintOpacity="1" />
            </ExperimentalAcrylicBorder.Material>
        </ExperimentalAcrylicBorder>

        <Grid RowDefinitions="Auto *">
            <Grid ColumnDefinitions="Auto * 160">
                <Menu Grid.Row="0" HorizontalAlignment="Left">
                    <MenuItem
                        Command="{Binding Path=AddComDebugViewCommand}"
                        Header="{comAssistant:I18n Key=Add_COM_Port_Debugging}"
                        InputGesture="Ctrl+N" />
                </Menu>
                <StackPanel Grid.Column="1" HorizontalAlignment="Right">
                    <SplitButton Content="{comAssistant:I18n Key=LANG}">
                        <SplitButton.Flyout>
                            <MenuFlyout Placement="Bottom">
                                <MenuItem
                                    Command="{Binding Path=SwitchLanguageCommand}"
                                    CommandParameter="en-US"
                                    Header="English" />
                                <MenuItem
                                    Command="{Binding Path=SwitchLanguageCommand}"
                                    CommandParameter="zh-CN"
                                    Header="中文" />
                            </MenuFlyout>
                        </SplitButton.Flyout>
                    </SplitButton>
                </StackPanel>
            </Grid>
            <TabControl Grid.Row="1" ItemsSource="{Binding Path=ComDebugViewModels}">
                <TabControl.ItemTemplate>
                    <DataTemplate DataType="vm:ComDebugViewModel">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="{Binding Path=PortName}" />
                            <TextBlock IsVisible="{Binding Path=Connected}" Text="{comAssistant:I18n Key=COM_CONNECTED}" />
                            <TextBlock IsVisible="{Binding Path=NotConnected}" Text="{comAssistant:I18n Key=COM_NOT_CONNECTED}" />
                            <Button
                                Padding="0"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Background="Transparent"
                                Command="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type Window}}, Path=((vm:MainViewModel)DataContext).RemoveComDebugViewCommand}"
                                CommandParameter="{Binding Path=.}">
                                <PathIcon
                                    Width="10"
                                    Height="10"
                                    Data="{StaticResource Close}"
                                    Foreground="Blue" />
                            </Button>
                        </StackPanel>
                    </DataTemplate>
                </TabControl.ItemTemplate>
            </TabControl>
        </Grid>
    </Panel>

</Window>